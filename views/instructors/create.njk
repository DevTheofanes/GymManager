{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar"></section>
        <form class="details" method="POST" action="/instructors">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="https://">
                </div>
            </div>
            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input type='text' name="name" placeholder="Nome do Instrutor">
                </div>
            </div>
            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M">Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>

                </div>
            </div>
            <div class="item">
                <div>Àrea de Atuação</div>
                <div>
                    <input type="text" placeholder="Separe os serviços prestados por vírgula" name="services">
                </div>
            </div>
            <button type="submit">Salvar</button>

        </form >
    </div>
{% endblock content %}
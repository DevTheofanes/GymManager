{% extends "layout.njk" %}

{% block content %}
    <div class="card table">
        <a class="new" href="/members/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span id="avatar" style="background-image: url({{member.avatar_url}})"></span>
                            {{member.name}}
                        </td>
                        <td>
                            {{member.email}}
                        </td>
                        <td>
                            {{member.weight}}Kg
                        </td>
                        <td>
                            {{member.height}}Cm
                        </td>
                        <td>
                            <a href="/members/{{member.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}